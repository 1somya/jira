<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.commons</groupId>
    <artifactId>xwiki-commons-pom</artifactId>
    <version>6.4</version>
  </parent>
  <groupId>org.xwiki.contrib.jira</groupId>
  <artifactId>macro-jira</artifactId>
  <packaging>pom</packaging>
  <name>Macro - JIRA - Parent POM</name>
  <version>8.2-SNAPSHOT</version>
  <description>Macro - JIRA - Parent POM</description>
  <scm>
    <connection>scm:git:git://github.com/xwiki-contrib/macro-jira.git</connection>
    <developerConnection>scm:git:git@github.com:xwiki-contrib/macro-jira.git</developerConnection>
    <url>https://github.com/xwiki-contrib/macro-jira</url>
    <tag>HEAD</tag>
  </scm>
  <issueManagement>
    <system>jira</system>
    <url>http://jira.xwiki.org/browse/MJIRA</url>
  </issueManagement>
  <developers>
    <developer>
      <id>vmassol</id>
      <name>Vincent Massol</name>
    </developer>
    <developer>
      <id>xwikidev</id>
      <name>XWiki Development Team</name>
    </developer>
  </developers>
  <properties>
    <rendering.version>${commons.version}</rendering.version>
  </properties>
  <modules>
    <module>macro-jira-default</module>
  </modules>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <includes>
            <include>**/*Test.java</include>
            <include>**/*IntegrationTests.java</include>
          </includes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <executions>
          <execution>
            <id>enforce-platform-isolation</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <bannedDependencies>
                  <excludes>
                    <!-- Ensure that we don't add any dependency on XWiki Platform since we want to allow pure
                         XWiki Rendering users to be able to use the jira macro. -->
                    <exclude>org.xwiki.platform:*</exclude>
                  </excludes>
                </bannedDependencies>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <!-- Ensure that this macro doesn't uses the HTML macro. We want to ensure this since we want to let users be
           able to disable the HTML macro (for security reasons) and the rest of XWiki should continue to work fine
      -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <executions>
          <execution>
            <id>enforce-banned-dependencies</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <rules>
                <bannedDependencies>
                  <excludes>
                    <exclude>org.xwiki.rendering:xwiki-rendering-macro-html:*:jar:*</exclude>
                  </excludes>
                  <message>
                    We need to be able to turn off the HTML Macro and still have a working system.
                    Thus it is forbidden to depend on the HTML Macro.
                  </message>
                </bannedDependencies>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
